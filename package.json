  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@parcel/packager-ts": "^2.15.2",
    "@parcel/transformer-typescript-types": "^2.15.2",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@types/node": "^24.0.13",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "parcel": "^2.15.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
